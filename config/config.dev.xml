<config>

	<!-- ETL File locations -->
	<locations>
        <root>/home/pentaho/GEM/</root>
        <log>/home/cunhal/pentaho/GEM/log</log>
        <tmp>/home/cunhal/pentaho/GEM/tmp</tmp>
