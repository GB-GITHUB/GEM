<?xml version="1.0"?>
<task>

	<name>dim_customer</name>
	<blocker>true</blocker>

	<parameter>
		<name>batch_id</name>
		<default>0</default>
		<query>
			<![CDATA[
				select max(batch_id) as batch_id 
				from ${TARGET_TABLE_NAME}
			]]>
		</query>
	</parameter>

	<source>
		<type>DB</type>
		<query>
			<![CDATA[
			SELECT
				*
			FROM 
				dim_customer
  			where batch_id > ${batch_id}
			]]>
		</query>
	</source>

	<transform>
		<transformation>dummy.ktr</transformation>
	</transform>

	<target>
		<loader>MonetDB</loader>
		<table>
			<name>dim_customer</name>
		</table>
	</target>


</task>