<?xml version="1.0"?>
<task>

	<name>dim_currency</name>
	<blocker>true</blocker>

	<parameter>
		<name>batch_id</name>
		<default>0</default>
		<query>
		<![CDATA[
				SELECT 
				  MAX(modified_date) 			AS last_modified_date 
				FROM
				  ${TARGET_TABLE_NAME}
			]]>		
		</query>
	</parameter>

	<source>
		<type>DB</type>
		<query>
			<![CDATA[
			SELECT
			  *
			FROM 
			  dim_currency
  			WHERE
  			  batch_id > ${batch_id}
			]]>
		</query>
	</source>

	<transform>
		<transformation>dummy.ktr</transformation>
	</transform>

	<target>
		<loader>MonetDB</loader>
		<table>
			<name>dim_currency</name>
		</table>
	</target>


</task>